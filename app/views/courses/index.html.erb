<div class="booyah-box col-xs-10 col-xs-offset-1" style="margin-bottom:10px">
  <h1 class="text-center">List of Courses</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2>
      <%= link_to course.title, course_path(course) %>
    </h2>
    <br />
    <%= image_tag course.image, :class => 'img-responsive center-block' %>
    <br />
    <div class="col-sm-8 col-xs-12">
      <%= course.description %>
    </div>
    <div class="col-sm-4 col-xs-12 text-center">
      <%= link_to 'Details', course_path(course), :class => 'btn btn-primary btn-large' %>
    </div>
    <br class="clr" />
    <br />
    <br />
  <% end %>
  <br />
</div>

